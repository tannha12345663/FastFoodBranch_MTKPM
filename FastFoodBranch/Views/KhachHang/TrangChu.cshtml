@model IEnumerable<FastFoodBranch.Models.Voucher>
@using FastFoodBranch.Models;
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_LayoutKH.cshtml";
    ViewBag.act1 = "active";
    QuanLyFastFoodEntities1 db = new QuanLyFastFoodEntities1();
    var dsvoucher = db.Vouchers.ToList();
}

@*<h2 style="text-align:center">Xin chào Lê Thị Thu Thảo</h2>*@

<!-- offer section -->

<section class="offer_section layout_padding-bottom">
    <div class="offer_container">
        <div class="container">
            <div class="row justify-content-center">
                <div id="carouselExampleControls" class="carousel slide" style="width:100%;" data-ride="carousel">
                    <!-- Indicators -->
                    @*<ul class="carousel-indicators">
                            @for (var i = 0; i < dsvoucher.Count; i++)
                            {
                                <li data-target="#carouselExampleControls" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                            }
                        </ul>*@

                    <!-- The slideshow/carousel -->
                    <div class="carousel-inner">
                        @for (var i = 0; i < dsvoucher.Count; i++)
                        {
                            var item = dsvoucher[i];
                            var location = db.ChiNhanhs.FirstOrDefault(c => c.LocationID == item.LocationID);
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <div class="box d-flex flex-row justify-content-center" style="background-image: url('https://aeonmall-binhduongcanary.com.vn/wp-content/uploads/2022/04/nen-menu.png') ">
                                    <div class="detail-box">
                                        <h5 class="text-center">@item.TenVoucher</h5>
                                        <h5>@item.MoTa</h5>
                                        @if (location != null && location.TenCN != null)
                                        {
                                            <h5 class="text-center">Voucher giành cho @location.TenCN</h5>
                                        }
                                        else
                                        {
                                            <h5 class="text-center">Voucher giành cho toàn bộ hệ thống</h5>
                                        }
                                        <h6 class="text-center">Cho đến ngày: @item.NgayHetHan.Value.ToString("dd/MM/yyyy")</h6>
                                        <h6 class="text-center">Lên đến <span>@(item.Discount * 100)%</span> Off</h6>
                                        <a id="copyBtn" class="d-flex justify-content-center" href="" data-voucher="@item.ID">
                                            Lấy mã ngay
                                            <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 640 512"><!--...--></svg>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Left and right controls/icons -->
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>




