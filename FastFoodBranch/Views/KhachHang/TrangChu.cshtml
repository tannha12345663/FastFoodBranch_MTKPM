                // Lấy giá trị cần sao chép từ thuộc tính data-
                var tenVoucher = element.getAttribute('data-voucher');

                // Tạo một thẻ textarea để chứa giá trị
                var textarea = document.createElement('textarea');
                textarea.value = tenVoucher;

                // Thêm thẻ vào body và chọn nó
                document.body.appendChild(textarea);
                textarea.select();

                // Thử thực hiện sao chép
                document.execCommand('copy');

                // Xóa thẻ textarea không còn cần thiết
                document.body.removeChild(textarea);

                // Thông báo cho người dùng
