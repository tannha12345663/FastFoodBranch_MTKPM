    @*<script src="~/Content/js/demo/datatables-demo.js"></script>*@
<script>
        $(document).ready(function () {

            @{
            if(Model != null)
            {
                macn = @Model.Select(s => s.LocationID).FirstOrDefault();
                <text>
                    let macn = '@macn';
                    $('#DSChiNhanh').val(macn);
                    @{
                        if(user.MaCV == "Admin")
                        {
                        <text>
                            $('#DSChiNhanh').select2({
                                width: "190px",
                                val: macn
                            });
                        </text>
                        }
                    }

                </text>
            }
            else
            {
                <text>
                    let macn = null;
                    $('#DSChiNhanh').select2({
                        width: "190px"
                    });
                </text>
            }
            <text>
                let checkNV = '@user.MaCV';
            </text>
            }
            function getAdditionalData(macn1,lock01) {
                // Định dạng dữ liệu bạn muốn gửi đi
                var additionalData = {
                    MaCN: macn1,
                    Lock01: lock01
                    // Thêm các tham số khác nếu cần
                };

                return additionalData;
            }
            let dataTable = $('#dataTable').DataTable({

                "ajax": {
                    "url": "/Admin/getDataMonAnCN",
                    "type": "POST",
                    "data": function (d) {
                        // Lấy dữ liệu thêm từ hàm getAdditionalData
                        var additionalData = getAdditionalData(macn, true);
                        console.log(d);
                        // Kết hợp dữ liệu thêm với dữ liệu gốc
                        $.extend(d, additionalData);

                        return JSON.stringify(d);
                    },
                    "contentType": "application/json",
                },
                "columns": [
                    { "data": "ID" },
                    { "data": "TenMonAn" },
                    {
                        "data": "image",
                        "render": function (data, type, row) {
                            // Tạo thẻ <img> tùy chỉnh
                            return '<img src="' + data + '" alt="Hình ảnh" width="100" height="100">';
                        }
                    },
                    {
                        "data": "trangThai",
                        "render": function (data, type, row) {
                            var status = '';
                            if (data === 2 ) {
                                status = '<div class="btn btn-sm btn-danger">Từ chối</div>';
