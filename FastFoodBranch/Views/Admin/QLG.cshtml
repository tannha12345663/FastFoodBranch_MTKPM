@section script{

    <script src="~/Content/js/tableToExcel.js"></script>
    <!-- Page level plugins -->
    <script src="~/Content/Vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/Vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-csv/1.0.11/jquery.csv.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    @*<script src="~/Content/js/demo/datatables-demo.js"></script>*@
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "language": {
                    "url": '@Url.Content("~/Content/Vendor/datatables/json.json")'
                }
            });
            $('#dataTable1').DataTable({
                columnDefs: [
                    { width: '150px', targets: 0 },// Độ rộng cột 5
                    { width: '150px', targets: 2 }
                ],
                "language": {
                    "url": '@Url.Content("~/Content/Vendor/datatables/json.json")'
                }
            });
            //Set up cho selection 2
            $('#SelectMA').select2({
                dropdownParent: $('#myModal'),
                width: "190px"
            });
        });
        var check1 = 0;
        var check2 = 0;
        var check3 = 0, check4 = 0, check5 = 0;

        //Check id món ắn
        $("#SelectMA").change(function () {
            var mama = $(this).find(':selected').val();
            var ndmess3 = $('#mess0');
            var icon3 = $('#icon0');

            ndmess3.attr('style', 'color:blue;font-size:12px;font-weight:bold');
            ndmess3.html('Vui lòng đợi trong giây lát .... !');
            if (mama !== null) {
                check1 = 1;
                icon3.html('<i class="fa fa-check-circle text-success ml-3" id="ic2" data-target="ok"></i>');
                icon3.mouseover(function () {
                    var errorMessage = 'Món ăn hợp lệ';
                    $(this).attr('title', errorMessage);
                });
                ndmess3.attr('style', 'color:green;font-size:12px;font-weight:bold');
                ndmess3.html('Món ăn hợp lệ.');
            }
            else {
                check1 = 0;
                icon3.html('<i class="fa fa-exclamation-circle ml-3 hidden-icon" aria-hidden="true"></i>');
                icon3.mouseover(function () {
                    var errorMessage = 'Vui lòng chọn';
                    $(this).attr('title', errorMessage);
                });
                ndmess3.attr('style', 'color:blue;font-size:12px;font-weight:bold');
                ndmess3.html('Vui lòng chọn món ăn .... !');
            }
            KTnd();
        });

        //Check giá gốc
        $('#GiaApDung').on('input', function () {
            var input = $(this);
            var icon1 = $('#icon1');
            var ndmess1 = $('#mess1');

            icon1.html('<i class="fa fa-spinner fa-spin ml-3"></i>');
            icon1.attr('data-target', 'notok');
            icon1.mouseover(function () {
                var errorMessage = 'Đang kiểm tra nội dung';
                $(this).attr('title', errorMessage);
            });
            ndmess1.attr('style', 'color:blue;font-size:12px;font-weight:bold');
            ndmess1.html('Vui lòng đợi trong giây lát .... !');

            if (input.val() == 0) {
                icon1.html('<i class="fa fa-exclamation-circle ml-3 hidden-icon" aria-hidden="true"></i>');
                check2 = 0;
                ndmess1.attr('style', 'color:blue;font-size:12px;font-weight:bold');
                ndmess1.html('Vui lòng nhập giá .... !');
            } else {
                // Hiển thị biểu tượng dấu tích xanh
                icon1.html('<i class="fa fa-check-circle text-success ml-3" id="ic2" data-target="ok"></i>');
                icon1.attr('data-target', 'ok');
                icon1.mouseover(function () {
                    var errorMessage = 'Giá hợp lệ';
                    $(this).attr('title', errorMessage);
                });
                ndmess1.attr('style', 'color:green;font-size:12px;font-weight:bold');
                ndmess1.html('Giá hợp lệ.');
                check2 = 1;
            }
            KTnd();
        });
        $("#NgayApDung").on("input", function () {
            var nap = $(this).val().trim();
            var icon3 = $('#icon2');
            var ndmess3 = $('#mess2');
            icon3.html('<i class="fa fa-spinner fa-spin ml-3"></i>');
            icon3.mouseover(function () {
                var errorMessage = 'Đang kiểm tra nội dung';
                $(this).attr('title', errorMessage);
            });
            ndmess3.attr('style', 'color:blue;font-size:12px;font-weight:bold');
            ndmess3.html('Vui lòng đợi trong giây lát .... !');
            if (nap !== "") {
                icon3.html('<i class="fa fa-check-circle text-success ml-3" id="ic2" data-target="ok"></i>');
                icon3.mouseover(function () {
                    var errorMessage = 'Ngày áp dụng hợp lệ';
                    $(this).attr('title', errorMessage);
                });
                ndmess3.attr('style', 'color:green;font-size:12px;font-weight:bold');
                ndmess3.html('Ngày áp dụng hợp lệ.');
                check3 = 1;
                var ngayApDung = nap;
                var ngayHetHan = $('#NgayHetHan').val();

                var isDiabled = $('#NgayHetHan').is(':disabled');
                if (isDiabled == true) {
                    $('#NgayHetHan').prop('disabled', false);
                }
