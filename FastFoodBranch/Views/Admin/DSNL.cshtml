                                                        <td data-b-a-s="thin">Bình thường</td>
                                                    }
                                                    else
                                                    {
                                                        <td data-b-a-s="thin">Đông lạnh</td>
                                                    }
                                                }

                                                @{
                                                    if (item.NgaySX != null && item.HanSD != null)
                                                    {
                                                        DateTime nsx = (DateTime)item.NgaySX;
                                                        DateTime hsd = (DateTime)item.HanSD;
                                                        <td data-b-a-s="thin">@nsx.ToString("dd/MM/yyyy")</td>
                                                        <td data-b-a-s="thin">@hsd.ToString("dd/MM/yyyy")</td>
                                                    }
                                                    else
                                                    {
                                                        <td data-b-a-s="thin">@item.NgaySX</td>
                                                        <td data-b-a-s="thin">@item.HanSD</td>
                                                    }

                                                }
                                                @{
                                                    if (item.Lock == true)
                                                    {
                                                        <td data-b-a-s="thin" hidden>
                                                            <div class="btn btn-sm btn-warning" style="width:100px">
                                                                Bình thường
                                                            </div>
                                                        </td>
                                                    }
                                                    else
                                                    {
                                                        <td data-b-a-s="thin" hidden>
                                                            <div class="btn btn-sm btn-info">
                                                                Tạm ngừng
                                                            </div>
                                                        </td>
                                                    }
                                                }
                                                <td>
                                                    <button class="btn btn-primary btn-sm edit" id="phuchoiNL">
                                                        <i class="fa fa-redo" aria-hidden="true"></i>
                                                    </button>

                                                    <button class="btn btn-danger btn-sm edit" id="xoaNL">
                                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                                    </button>
