        // Tạo hàm chuyển đổi định dạng ngày/tháng/năm thành yyyy-mm-dd
        function formatDate(inputDate) {
            var parts = inputDate.split('/');
            if (parts.length === 3) {
                var day = parts[0];
                var month = parts[1];
                var year = parts[2];
                if (day.length === 1) {
                    day = '0' + day;
                }
                if (month.length === 1) {
                    month = '0' + month;
                }
                return year + '-' + month + '-' + day;
            }
            return inputDate; // Trả về giá trị gốc nếu không thể chuyển đổi
        }

