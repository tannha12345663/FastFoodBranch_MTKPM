                                <tr data-exclude="true">
                                    <th hidden>ID</th>
                                    <th>Tên nguyên liệu</th>
                                    <th>Số lượng</th>
                                    <th>Đơn vị</th>
                                    <td>Nhà cung cấp</td>
                                    <td>Bảo quản</td>
                                    <td>Ngày SX</td>
                                    <td>Hạn SD</td>
                                    <th hidden>Trạng thái</th>
                                    <th>Chức năng</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @{
                                    foreach (var item in Model)
                                    {
                                        if (item.Lock == true)
                                        {
                                            <tr>
                                                <td data-b-a-s="thin" hidden>@item.ID</td>
                                                <td data-b-a-s="thin">@item.TenNL</td>
                                                <td data-b-a-s="thin">@item.TrongLuong</td>
                                                <td data-b-a-s="thin">@item.DonVi</td>
                                                <td data-b-a-s="thin">@item.TenNCC</td>
                                                @{
                                                    if (item.BaoQuan == 1)
                                                    {


                                                        <td data-b-a-s="thin">Bình thường</td>
                                                    }
                                                    else
                                                    {
                                                        <td data-b-a-s="thin">Đông lạnh</td>
                                                    }
                                                }
                                                @{
                                                    if (item.NgaySX != null && item.HanSD != null)
                                                    {
                                                        DateTime nsx = (DateTime)item.NgaySX;
                                                        DateTime hsd = (DateTime)item.HanSD;
                                                        <td data-b-a-s="thin">@nsx.ToString("dd/MM/yyyy")</td>
                                                        <td data-b-a-s="thin">@hsd.ToString("dd/MM/yyyy")</td>
                                                    }
                                                    else
                                                    {
                                                        <td data-b-a-s="thin">@item.NgaySX</td>
                                                        <td data-b-a-s="thin">@item.HanSD</td>
                                                    }

                                                }

                                                @{
                                                    if (item.Lock == true)
                                                    {
                                                        <td data-b-a-s="thin" hidden>
                                                            <div class="btn btn-sm btn-warning" style="width:100px">
                                                                Bình thường
                                                            </div>
                                                        </td>
                                                    }
                                                    else
                                                    {
                                                        <td data-b-a-s="thin" hidden>
                                                            <div class="btn btn-sm btn-info">
                                                                Tạm ngừng
                                                            </div>
                                                        </td>
                                                    }
                                                }
                                                <td>
                                                    <button class="btn btn-success btn-sm edit" id="ChinhSuaNL">
                                                        <i class="fa fa-edit"></i>
                                                    </button>
                                                    <button class="btn btn-success btn-sm save edit" style="display:none" id="luutt"><i class="fa fa-check" aria-hidden="true"></i></button>
                                                    <button class="btn btn-danger btn-sm edit" id="thuhoiNL">
                                                        <i class="fa fa-times" aria-hidden="true"></i>
                                                    </button>
                                                </td>
                                            </tr>

                                        }
                                    }
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
