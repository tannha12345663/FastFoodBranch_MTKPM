@model IEnumerable<FastFoodBranch.Models.NguyenLieu>
@using FastFoodBranch.Models;
@{
    ViewBag.Title = "Danh sách nguyên liệu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.dsnl = "active";
    ViewBag.qlma1 = "show";
    ViewBag.qlma0 = "active";
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

@{
    var checkmess = (string)TempData["messageAlert"];
    if (checkmess == "success0")
    {
        <script>
            swal({
                title: "Thêm nguyên liệu thành công",
                text: "Nguyên liệu @TempData["tennl"] đã được thêm mới",
                icon: "success",
                button: "OK",
            });
        </script>
    }
    else if (checkmess == "error0")
    {
        <script>
            swal({
                title: "Thêm nguyên liệu không thành công",
                text: "Nguyên liệu @TempData["tennl"] đã bị hủy. Nội dung lỗi : @TempData["mess"]",
                icon: "error",
                button: "OK",
            });
        </script>
    }
}

<div class="container-fluid">
    <ul class="nav nav-tabs">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#menu0">
                    <h4 class="btn btn-outline-warning">Danh sách nguyên liệu còn sử dụng</h4>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#menu1">
                    <h5 class="btn btn-outline-info">Danh sách nguyên liệu bị thu hồi</h5>
                </a>
            </li>
        </ul>
    </ul>
    @*Page Heading*@
    <div class="tab-content">
        <div id="menu0" class="tab-pane active">
            <div class="card shadow mb-4">
