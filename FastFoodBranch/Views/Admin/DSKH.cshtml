<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

@{
    var checkmess = (string)TempData["messageAlert"];
    if (checkmess == "success0")
    {
        <script>
            swal({
                title: "Thêm khách hàng thành công",
                text: "Khách hàng @TempData["tenkh"] đã được thêm mới",
                icon: "success",
                button: "OK",
            });
        </script>
    }
    else if (checkmess == "error0")
    {
        <script>
            swal({
                title: "Thêm khách hàng không thành công",
                text: "Khách hàng @TempData["tenkh"] đã bị hủy. Nội dung lỗi : @TempData["mess"]",
