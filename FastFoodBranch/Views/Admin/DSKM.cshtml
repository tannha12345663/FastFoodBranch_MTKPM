                                    if (user.MaCV == "NV")
                                    {
                                        <label class="control-label ml-2 mr-0" for="TenTK" hidden>Vui lòng chọn chi nhánh: </label>
                                        <select class="form-control ml-3" id="DSChiNhanh" required hidden>
                                            <option selected disabled>--Vui lòng chọn--</option>
                                            @{ foreach (var item01 in dscn)
                                                {
                                                    <option value="@item01.LocationID">@item01.TenCN</option>
                                                }


                                            }
                                        </select>
                                    }
                                    else
                                    {
