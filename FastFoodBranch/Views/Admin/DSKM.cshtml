    var dscn = db.ChiNhanhs.ToList();
    var macn = "";
    var user = (NhanVien)Session["userNV"];
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

@{
    var checkmess = (string)TempData["messageAlert"];
    if (checkmess == "success0")
    {
        <script>
            swal({
                title: "Thêm voucher thành công",
                text: "Voucher của chi nhánh @TempData["voucherCN"] đã được thêm mới",
                icon: "success",
                button: "OK",
            });
        </script>
    }
    else if (checkmess == "success1")
    {
        <script>
        swal({
            title: "Cập nhật voucher thành công",
            text: "Voucher @TempData["mavoucher"] đã được cập nhật !",
            icon: "success",
            button: "OK",
        });
        </script>
    }
    else if (checkmess == "success2")
    {
        <script>
        swal({
            title: "Thu hồi voucher thành công",
            text: "Voucher @TempData["mavoucher"] đã được thu hồi !",
            icon: "success",
            button: "OK",
        });
        </script>
    }
    else if (checkmess == "success3")
    {
        <script>
    swal({
        title: "Phục hồi voucher thành công",
        text: "Voucher @TempData["mavoucher"] đã được phục hồi !",
        icon: "success",
        button: "OK",
    });
        </script>
    }
    else if (checkmess == "success4")
    {
        <script>
    swal({
        title: "Xóa voucher thành công",
        text: "Voucher @TempData["mavoucher"] đã được xóa !",
        icon: "success",
        button: "OK",
    });
        </script>
    }
    else if (checkmess == "error0")
    {
        <script>
            swal({
                title: "Thêm voucher không thành công",
                text: "Voucher của chi nhánh @TempData["voucherCN"] đã bị hủy. Nội dung lỗi : @TempData["mess"]",
                icon: "error",
                button: "OK",
            });
        </script>
    }
    else if (checkmess == "error1")
    {
        <script>
        swal({
            title: "Cập nhật voucher không thành công",
            text: "Voucher  @TempData["mavoucher"] không được cập nhật. Nội dung lỗi : @TempData["mess"]",
            icon: "error",
            button: "OK",
        });
        </script>
    }
    else if (checkmess == "error2")
    {
        <script>
        swal({
            title: "Thu hồi voucher không thành công",
            text: "Voucher  @TempData["mavoucher"] không được thu hồi. Nội dung lỗi : @TempData["mess"]",
            icon: "error",
            button: "OK",
        });
        </script>
    }
    else if (checkmess == "error3")
    {
        <script>
        swal({
            title: "Phục hồi voucher không thành công",
            text: "Voucher  @TempData["mavoucher"] không được phục hồi. Nội dung lỗi : @TempData["mess"]",
            icon: "error",
            button: "OK",
        });
        </script>
    }
    else if (checkmess == "error4")
    {
        <script>
        swal({
            title: "Xóa voucher không thành công",
            text: "Voucher  @TempData["mavoucher"] không được xóa. Nội dung lỗi : @TempData["mess"]",
            icon: "error",
            button: "OK",
        });
        </script>
    }
}

<div class="container-fluid">
    <ul class="nav nav-tabs">
