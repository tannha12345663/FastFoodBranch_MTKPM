                                <tr data-exclude="true">
                                    <th>ID</th>
                                    <th>Tên voucher</th>
                                    <th>Ngày áp dụng</th>
                                    <th>Ngày hết hạn</th>
                                    <th>Mô tả</th>
                                    <th>Discount</th>
                                    <th>Trạng thái</th>
                                    <th>Chức năng</th>
                                </tr>
                            </tfoot>
