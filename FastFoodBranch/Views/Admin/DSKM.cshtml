                                @{
                                    if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            if (item.Lock == true)
                                            {
                                                <tr>
                                                    <td data-b-a-s="thin">@item.ID</td>
                                                    <td data-b-a-s="thin">@item.TenVoucher</td>
                                                    <td data-b-a-s="thin">@item.NgayApDung</td>
                                                    <td data-b-a-s="thin">@item.NgayHetHan</td>
                                                    <td data-b-a-s="thin">@item.MoTa</td>
                                                    <td data-b-a-s="thin">@item.Discount</td>
                                                    @{
                                                        if (item.TrangThai == 2)
                                                        {
                                                            <td data-b-a-s="thin">
                                                                <div class="btn btn-sm btn-danger">
                                                                    Từ chối
                                                                </div>
                                                            </td>

                                                        }
                                                        else if (item.TrangThai == 1)
                                                        {
                                                            <td data-b-a-s="thin">
                                                                <div class="btn btn-sm btn-success">
                                                                    Đã duyệt
                                                                </div>
                                                            </td>
                                                        }
                                                        else if (item.TrangThai == 0)
                                                        {
                                                            <td data-b-a-s="thin">
                                                                <div class="btn btn-sm btn-warning">
                                                                    Đang xử lý
                                                                </div>
                                                            </td>
                                                        }
                                                    }
                                                    <td>
                                                        <button class="btn btn-success btn-sm edit" id="ChinhSuaVoucher">
                                                            <i class="fa fa-edit"></i>
                                                        </button>
                                                        <button class="btn btn-success btn-sm save edit" style="display:none" id="luutt"><i class="fa fa-check" aria-hidden="true"></i></button>
                                                        <button class="btn btn-danger btn-sm edit" id="thuhoiVoucher">
                                                            <i class="fa fa-times" aria-hidden="true"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div id="menu1" class="tab-pane fade">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Danh sách voucher đang tạm ngừng triển khai trong hệ thống </h6>
