                                    <th data-exclude="true">Chức năng</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr data-exclude="true">
                                    <th>ID</th>
                                    <th>Tên voucher</th>
                                    <th>Ngày áp dụng</th>
                                    <th>Ngày hết hạn</th>
                                    <th>Mô tả</th>
                                    <th>Discount</th>
                                    <th>Trạng thái</th>
                                    <th>Chức năng</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @{
                                    if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            if (item.Lock == false)
                                            {
                                                <tr>
                                                    <td data-b-a-s="thin">@item.ID</td>
                                                    <td data-b-a-s="thin">@item.TenVoucher</td>
                                                    <td data-b-a-s="thin">@item.NgayApDung</td>
                                                    <td data-b-a-s="thin">@item.NgayHetHan</td>
                                                    <td data-b-a-s="thin">@item.MoTa</td>
                                                    <td data-b-a-s="thin">@item.Discount</td>
                                                    @{
                                                        if (item.TrangThai == 2)
                                                        {
                                                            <td data-b-a-s="thin">
                                                                <div class="btn btn-sm btn-danger">
                                                                    Từ chối
                                                                </div>
                                                            </td>

                                                        }
                                                        else if (item.TrangThai == 1)
                                                        {
                                                            <td data-b-a-s="thin">
                                                                <div class="btn btn-sm btn-success">
                                                                    Đã duyệt
                                                                </div>
                                                            </td>
                                                        }
                                                        else if (item.TrangThai == 0)
                                                        {
                                                            <td data-b-a-s="thin">
                                                                <div class="btn btn-sm btn-warning">
                                                                    Đang xử lý
                                                                </div>
                                                            </td>
                                                        }
                                                    }
                                                    <td>
                                                        <button class="btn btn-primary btn-sm edit" id="phuchoiVoucher">
                                                            <i class="fa fa-redo" aria-hidden="true"></i>
                                                        </button>

                                                        <button class="btn btn-danger btn-sm edit" id="xoaVoucher">
                                                            <i class="fa fa-trash" aria-hidden="true"></i>
                                                        </button>
                                                    </td>
                                                </tr>

                                            }
                                        }
                                    }

                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
