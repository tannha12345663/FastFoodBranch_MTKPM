        <script>
            swal({
                title: "Thêm voucher thành công",
                text: "Voucher @TempData["tenvoucher"] đã được thêm mới",
                icon: "success",
                button: "OK",
            });
        </script>
    }
    else if (checkmess == "error0")
    {
        <script>
            swal({
                title: "Thêm voucher không thành công",
                text: "Voucher @TempData["tenct"] đã bị hủy. Nội dung lỗi : @TempData["mess"]",
