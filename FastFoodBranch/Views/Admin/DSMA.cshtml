    ViewBag.dsma = "active";
    ViewBag.qlma1 = "show";
    ViewBag.qlma0 = "active";

    QuanLyFastFoodEntities1 db = new QuanLyFastFoodEntities1();
    var dsdm = db.DanhMucs.ToList();
    var dsct = db.CongThucs.ToList();
