<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
@{
    var checkmess = (string)TempData["messageAlert"];
    if (checkmess == "success0")
    {
        <script>
            swal({
                title: "Thêm món ăn thành công",
                text: "Món ăn @TempData["tenma"] đã được thêm mới",
                icon: "success",
                button: "OK",
            });
        </script>
    }
    else if (checkmess == "success1")
    {
        <script>
            swal({
                title: "Chỉnh sửa món ăn thành công",
                text: "Món ăn @TempData["tenma"] đã được chỉnh sửa",
                icon: "success",
                button: "OK",
            });
        </script>
    }
    else if (checkmess == "error0")
    {
        <script>
            swal({
                title: "Thêm món ăn không thành công",
                text: "Món ăn @TempData["tenma"] đã bị hủy. Nội dung lỗi : @TempData["mess"]",
                icon: "error",
                button: "OK",
            });
        </script>
    }
    else if (checkmess == "error1")
    {
        <script>
            swal({
                title: "Món ăn chỉnh sửa không thành công",
                text: "Món ăn @TempData["tenma"] không thể chỉnh sửa. Nội dung lỗi : @TempData["mess"]",
                icon: "error",
                button: "OK",
            });
        </script>
    }
}

